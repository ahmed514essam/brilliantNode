<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Products</title>
  <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    body {
      background: #f4f6f9;
      font-family: "Segoe UI", sans-serif;
    }

    /* ================= Sidebar ================= */
    .sidebar {
      width: 260px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: #1e1f26;
      color: #fff;
      padding-top: 20px;
      z-index: 2000;
      transition: .3s;
    }

    .sidebar h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 22px;
    }

    .sidebar a {
      color: #ccc;
      display: block;
      padding: 12px 25px;
      text-decoration: none;
      font-size: 15px;
      transition: .2s;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: #2a2c38;
      color: #fff;
    }

    .menu-btn {
      display: none;
      font-size: 24px;
      cursor: pointer;
      margin-right: 15px;
    }

    @media (max-width: 992px) {
      .sidebar {
        left: -260px;
      }

      .sidebar.active {
        left: 0;
      }

      .menu-btn {
        display: block;
      }
    }

    /* ================= Content ================= */
    .content {
      margin-left: 260px;
      padding: 25px;
    }

    @media (max-width: 992px) {
      .content {
        margin-left: 0;
      }
    }

    /* ================= Topbar ================= */
    .topbar {
      background: #fff;
      padding: 15px 25px;
      margin-bottom: 25px;
      border-radius: 14px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 12px rgba(0, 0, 0, .06);
    }

    @media (max-width: 576px) {
      .topbar {
        flex-direction: column;
        gap: 10px;
      }

      .topbar input {
        width: 100%;
      }
    }

    /* ================= Product Card ================= */
    .product-card {
      height: 100%;
      border-radius: 16px;
      border: none;
      display: flex;
      flex-direction: column;
      transition: .3s;
    }

    .product-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, .1);
    }

    .product-card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 12px;
    }

    .product-info {
      flex-grow: 1;
    }

    .price-old {
      text-decoration: line-through;
      color: #999;
      font-size: 14px;
    }

    .price-new {
      color: #198754;
      font-weight: bold;
    }

 .card-actions {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 10px;
}

  </style>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h2>Admin Panel</h2>
    <a href="./dashboard.html"><i class="fa fa-home me-2"></i> Dashboard</a>
    <a href="./show.html" class="active"><i class="fa fa-box me-2"></i> Products</a>
    <a href="./orders.html"><i class="fa fa-table me-2"></i> Orders</a>
    <a href="./user/aboutSettings.html"><i class="fa fa-users me-2"></i> About Settings</a>
    <a href="./user/sell.html"><i class="fa fa-shopping-cart me-2"></i> Sell Section</a>
    <a href="./user/settings.html"><i class="fa fa-chart-line me-2"></i> Home Settings</a>
    <a href="./adminaccount.html"><i class="fa fa-gear me-2"></i> Admin Account</a>
    <a href="/admin/logout.html"><i class="fa fa-power-off me-2"></i> Logout</a>
  </div>

  <!-- Content -->
  <div class="content">

    <!-- Topbar -->
    <div class="topbar">
      <div class="d-flex align-items-center">
        <i class="fa fa-bars menu-btn" onclick="toggleSidebar()"></i>
        <h4 class="m-0">Products Management</h4>
      </div>
      <input type="search" class="form-control w-25" placeholder="Search products..." />
    </div>

    <!-- Add Product -->
    <div class="mb-4 text-end">
      <a href="./user/add.html" class="btn btn-success">
        <i class="fa fa-plus me-1"></i> Add Product
      </a>
    </div>

    <!-- Products -->
    <div class="row g-4">
      <% products.forEach(item => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <div class="card product-card p-3">

            <% if(item.image && item.image.length > 0){ %>
              <img src="<%= item.image[0].url %>" alt="product">
            <% } else { %>
              <div class="text-center text-muted">No Image</div>
            <% } %>

            <div class="product-info mt-2">
              <h6 class="mb-1"><%= item.name %></h6>
              <p class="text-muted small mb-1"><%= item.category %></p>
              <span class="price-old"><%= item.price %> LE</span><br>
              <span class="price-new"><%= item.priceAfterDiscount %> LE</span>
            </div>

            <div class="card-actions">
              <a href="./edit/<%= item._id %>" class="btn btn-warning btn-sm">
                <i class="fa fa-edit"></i>
              </a>


          


              <form action="/delete/<%= item._id %>?_method=DELETE" method="post">
                <button class="btn btn-danger btn-sm">
                  <i class="fa fa-trash"></i>
                </button>
              </form>
            </div>

          </div>
        </div>
      <% }) %>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleSidebar() {
      document.getElementById("sidebar").classList.toggle("active");
    }
  </script>

</body>
</html>
