<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>تفاصيل العميل</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      background: #f5f6fa;
      font-family: "Segoe UI", sans-serif;
    }

    .card {
      border-radius: 14px;
    }

    .badge-status {
      font-size: 0.85rem;
      padding: 6px 10px;
    }

    .order-products div {
      font-size: 14px;
      margin-bottom: 4px;
    }
  </style>
</head>
<body>

<div class="container my-5">

  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
      <i class="fa fa-user me-2 text-primary"></i>
      ملف العميل
    </h3>

    <a href="/orders.html" class="btn btn-outline-secondary btn-sm">
      <i class="fa fa-arrow-left me-1"></i> رجوع للطلبات
    </a>
  </div>

  <!-- Customer Info -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h5 class="mb-3 text-primary">
        <i class="fa fa-id-card me-2"></i> بيانات العميل
      </h5>

      <div class="row g-3">
        <div class="col-md-6">
          <strong>الاسم:</strong>
          <div><%= customer.fullname %></div>
        </div>

        <div class="col-md-6">
          <strong>رقم الهاتف:</strong>
          <div><%= customer.phone %></div>
        </div>

        <div class="col-md-6">
          <strong>المحافظة:</strong>
          <div><%= customer.governorate %></div>
        </div>

        <div class="col-md-6">
          <strong>العنوان:</strong>
          <div><%= customer.address %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Orders Section -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="mb-3 text-primary">
        <i class="fa fa-shopping-cart me-2"></i>
        طلبات العميل
      </h5>

      <div class="table-responsive">
        <table class="table table-bordered align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>تاريخ الطلب</th>
              <th>المنتجات</th>
              <th>الإجمالي</th>
              <th>الحالة</th>
            </tr>
          </thead>
          <tbody>

          <% if (orders.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center text-muted">
                لا يوجد طلبات لهذا العميل
              </td>
            </tr>
          <% } %>

          <% orders.forEach((order, index) => { %>
            <tr>
              <td><%= index + 1 %></td>

              <td>
                <%= new Date(order.createdAt).toLocaleDateString() %>
              </td>

              <td class="order-products">
                <% order.products.forEach(p => { %>
                  <div>
                    <i class="fa fa-box text-secondary me-1"></i>
                    <strong><%= p.name %></strong>
                    × <%= p.qty %>
                    — <%= p.priceAfterDiscount %> LE
                  </div>
                <% }) %>
              </td>

              <td>
                <strong><%= order.totalPrice %> LE</strong>
              </td>

              <td>
                <% if (order.status === 'pending') { %>
                  <span class="badge bg-warning badge-status">قيد الانتظار</span>
                <% } else if (order.status === 'shipped') { %>
                  <span class="badge bg-info badge-status">جاري الشحن</span>
                <% } else if (order.status === 'completed') { %>
                  <span class="badge bg-success badge-status">تم التسليم</span>
                <% } else { %>
                  <span class="badge bg-danger badge-status">ملغي</span>
                <% } %>
              </td>
            </tr>
          <% }) %>

          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
